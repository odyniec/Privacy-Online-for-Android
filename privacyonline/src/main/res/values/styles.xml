<resources>

    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/secondary_text_color</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_color_inverse</item>
        <item name="android:textColorPrimary">@color/primary_text_color</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_color_inverse</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/primary_text_color</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.poButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">160sp</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:background">@drawable/button_privacyonline</item>
        <item name="android:textColor">@color/secondary_text_material_dark</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <!--<style name="poToolbar" parent="Theme.AppCompat.Light">-->
    <style name="poToolbar" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="android:gravity">center</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="AppTheme.statusBoxTitle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/status_box_title</item>
        <item name="android:color">@color/status_box_primary_text</item>
        <item name="android:textColor">@color/status_box_primary_text</item>
    </style>
    <style name="AppTheme.statusBoxStatus">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/status_box_status</item>
        <item name="android:textAlignment">center</item>
        <item name="android:color">@color/status_box_secondary_text</item>
        <item name="android:textColor">@color/status_box_secondary_text</item>
    </style>
    <style name="AppTheme.statusBoxDataInfo">
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/status_box_data_info</item>
        <item name="android:color">@color/status_box_primary_text</item>
        <item name="android:textColor">@color/status_box_primary_text</item>
    </style>
    <style name="AppTheme.aboutPageText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/about_text_size</item>
        <item name="android:color">@color/about_text</item>
        <item name="android:textColor">@color/about_text</item>
        <item name="android:layout_marginTop">@dimen/about_text_body_container_margin_vertical</item>
        <item name="android:layout_marginLeft">@dimen/about_text_body_container_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/about_text_body_container_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/about_text_body_container_margin_vertical</item>
        <item name="android:textColorLink">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.aboutPageHeading" parent="AppTheme.aboutPageText">
        <item name="android:textAlignment">center</item>
    </style>
    <style name="PrivacyOnlineAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>


    <style name="logWindowStatusText">
        <item name="android:paddingLeft">@dimen/paddingItemsSidebarLog</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="logWindowStatusTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
